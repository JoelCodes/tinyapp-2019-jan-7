<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp</title>
  </head>

  <body style="font-size:20px; padding:50px;">
    <header>
      <% include ./partials/_header %>
    </header>
  <% yourURLs.forEach((item) => { %>
    <% if (item.tinyURL === shortURL) { %>
      <p>ShortURL - <b><%= shortURL %></b></p>
      <p>
        <form method="POST" action="/urls/<%= item.tinyURL %>">
          <input type="text" name="newFull" placeholder="<%= item.fullURL %>">
          <button>Edit</button>
        </form>
      </p>
    <% } %>
  <% }) %>
  </body>
</html>